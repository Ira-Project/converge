                    "stepConcepts": [
                        "14433c91-f1d3-40a5-97dc-3039b29cf8eb"
                    ],
                    "options": [
                        {
                            "optionText": "$!$The potential difference across each parallel device is equal$!$",
                            "optionImage": "",
                            "isCorrect": true
                        },
                        {
                            "optionText": "$!$The current through each parallel branch is equal$!$",
                            "optionImage": "",
                            "isCorrect": false
                        },
                        {
                            "optionText": "$!$Resistances in parallel add together$!$",
                            "optionImage": "",
                            "isCorrect": false
                        }
                    ]
                },
                {
