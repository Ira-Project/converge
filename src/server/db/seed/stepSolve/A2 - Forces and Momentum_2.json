                    "stepSolveAnswerUnits": "",
                    "stepConcepts": [
                        "ef8aedcd-2a10-45df-a29f-ed2362df9af7",
                        "7caeca74-0d42-49f5-8535-2b40190ae354"
                    ],
                    "options": [
                        {
                            "optionText": "$!$W = mg$!$",
                            "optionImage": "",
                            "isCorrect": true
                        },
                        {
                            "optionText": "$!$F = ma$!$",
                            "optionImage": "",
                            "isCorrect": false
                        },
                        {
                            "optionText": "$!$T = kx$!$",
                            "optionImage": "",
                            "isCorrect": false
                        }
                    ]
                },
                {
                    "id": "ed50f7a8e6654bdd8833e",
                    "stepText": "Great, now calculate the net force needed for the upward acceleration using Newton's Second Law. Use the mass of the beam and its acceleration.",
                    "stepText2": "",
                    "stepImage": "",
