                    "options": [
                        {
                            "optionText": "$!$E_k = \\frac{1}{2} mv^2$!$",
                            "optionImage": "",
                            "isCorrect": true
                        },
                        {
                            "optionText": "$!$E_k = mv$!$",
                            "optionImage": "",
