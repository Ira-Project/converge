                    ],
                    "options": [
                        {
                            "optionText": "$!$\\lambda = \\frac{ln(2)}{T_{1/2}}$!$",
                            "optionImage": "",
                            "isCorrect": true
                        },
                        {
                            "optionText": "$!$\\lambda = \\frac{T_{1/2}}{ln(2)}$!$",
                            "optionImage": "",
                            "isCorrect": false
