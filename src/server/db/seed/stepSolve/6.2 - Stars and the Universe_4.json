                    "stepSolveAnswerUnits": "",
                    "stepConcepts": [
                        "6e3fb287-cc65-4984-afe0-467e153ff20c",
                        "ae5906b8-745a-436d-8695-00ba2c22369f"
                    ],
                    "options": [
                        {
                            "optionText": "$!$\\text{Age} = \\frac{1}{H_0}$!$",
                            "optionImage": "",
                            "isCorrect": true
                        },
                        {
                            "optionText": "$!$\\text{Age} = H_0$!$",
                            "optionImage": "",
                            "isCorrect": false
