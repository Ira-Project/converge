                    ],
                    "stepSolveAnswerUnits": "",
                    "stepConcepts": [
                        "0be92c40-ded4-48ee-a466-07236da03b9f"
                    ],
                    "options": [
                        {
                            "optionText": "$!$\\eta = \\frac{W_{out}}{E_{consumed}}$!$",
                            "optionImage": "",
                            "isCorrect": true
                        },
                        {
                            "optionText": "$!$\\eta = \\frac{E_{consumed}}{W_{out}}$!$",
                            "optionImage": "",
                            "isCorrect": false
                        },
                        {
