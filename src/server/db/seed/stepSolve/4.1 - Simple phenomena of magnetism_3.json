                    "stepSolveAnswer": [
                        ""
                    ],
                    "stepSolveAnswerUnits": "",
                    "stepConcepts": [],
                    "options": [
                        {
                            "optionText": "$!$\\mu_1 = 1.0\\,A\\cdot m^2,\\;\\mu_2 = 0.1\\,A\\cdot m^2,\\;r = 0.5\\,m$!$",
