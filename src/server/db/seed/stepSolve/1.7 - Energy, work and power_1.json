                    "options": [
                        {
                            "optionText": "$!$\\text{Efficiency} = \\frac{\\text{useful energy output}}{\\text{total energy input}} \\times 100\\%$!$",
                            "optionImage": "",
                            "isCorrect": true
                        },
                        {
                            "optionText": "$!$\\text{Efficiency} = \\frac{\\text{total energy input}}{\\text{useful energy output}} \\times 100\\%$!$",
