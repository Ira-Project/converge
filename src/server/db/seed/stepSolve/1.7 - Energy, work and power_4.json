                    "stepImage": "",
                    "stepSolveAnswer": [
                        "2"
                    ],
                    "stepSolveAnswerUnits": "",
                    "stepConcepts": [],
                    "options": []
                },
                {
                    "id": "9e673a2f6e8241bb8e5b1",
