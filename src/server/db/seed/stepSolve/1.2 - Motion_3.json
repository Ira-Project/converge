                    ],
                    "stepSolveAnswerUnits": "",
                    "stepConcepts": [
                        "358fa7d0-ba78-4a9a-9ad6-af05cca12b29"
                    ],
                    "options": [
                        {
                            "optionText": "$!$d = vt$!$",
                            "optionImage": "",
                            "isCorrect": true
                        },
                        {
                            "optionText": "$!$d = vt + \\frac{1}{2}at^2$!$",
                            "optionImage": "",
                            "isCorrect": false
                        },
                        {
                            "optionText": "$!$d = ut + \\frac{1}{2}at^2$!$",
                            "optionImage": "",
                            "isCorrect": false
                        }
                    ]
                },
                {
                    "id": "1f3e92301e5f4a6cafd51",
