                    ],
                    "options": [
                        {
                            "optionText": "$!$s = ut + \\frac{1}{2}at^2$!$",
                            "optionImage": "",
                            "isCorrect": true
                        },
                        {
                            "optionText": "$!$s = u + at$!$",
                            "optionImage": "",
                            "isCorrect": false
