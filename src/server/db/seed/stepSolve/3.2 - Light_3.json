                    ],
                    "stepSolveAnswerUnits": "",
                    "stepConcepts": [
                        "cac54d69-cd90-40c6-bd41-2229d19e1dc3"
                    ],
                    "options": [
                        {
                            "optionText": "$!$v = -\\,4\\,u$!$",
                            "optionImage": "",
                            "isCorrect": true
                        },
                        {
                            "optionText": "$!$v = 4\\,u$!$",
                            "optionImage": "",
