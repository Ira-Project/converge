                        {
                            "optionText": "$!$P = I \\times R$!$",
                            "optionImage": "",
                            "isCorrect": false
                        },
                        {
                            "optionText": "$!$P = I^2R$!$",
                            "optionImage": "",
                            "isCorrect": true
                        },
                        {
                            "optionText": "$!$P = \\frac{I^2}{R}$!$",
                            "optionImage": "",
                            "isCorrect": false
