                        "a20069a8-ca33-4e26-93ce-87c105e52c27",
                        "19724e93-e748-4ce6-9cdb-a6e1b3f2e41f"
                    ],
                    "options": [
                        {
                            "optionText": "$!$f' = f \\left(\\frac{v + u_{observer}}{v + u_{source}}\\right)$!$",
                            "optionImage": "",
                            "isCorrect": true
                        },
                        {
                            "optionText": "$!$f' = f \\left(\\frac{v - u_{observer}}{v + u_{source}}\\right)$!$",
