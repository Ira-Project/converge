                    ],
                    "stepSolveAnswerUnits": "m/s",
                    "stepConcepts": [
                        "5dab74ab-387d-4288-8961-5ac6d456b3e9",
                        "ba45dfc9-7996-4dda-bd14-1d7f21675597"
                    ],
                    "options": [
                        {
                            "optionText": "Moving away",
                            "optionImage": "",
                            "isCorrect": true
                        },
                        {
                            "optionText": "Moving towards",
                            "optionImage": "",
                            "isCorrect": false
                        }
                    ]
                }
            ]
        }
