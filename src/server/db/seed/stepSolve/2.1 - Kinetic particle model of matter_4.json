                    "stepSolveAnswerUnits": "",
                    "stepConcepts": [],
                    "options": [
                        {
                            "optionText": "$!$Q_{total} = Q_{heating} + Q_{vaporization}$!$",
                            "optionImage": "",
                            "isCorrect": true
