                    "options": [
                        {
                            "optionText": "$!$A_{r}^2 = 0.25 \\times (0.8)^2$!$",
                            "optionImage": "",
                            "isCorrect": true
                        },
                        {
                            "optionText": "$!$A_{r} = 0.25 \\times (0.8)^2$!$",
                            "optionImage": "",
