                    "stepSolveAnswerUnits": "",
                    "stepConcepts": [
                        "0be92c40-ded4-48ee-a466-07236da03b9f",
                        "2691d473-fa9f-48af-866f-fcf735cf65ac"
                    ],
                    "options": [
                        {
                            "optionText": "$!$\\eta = \\frac{\\text{Mechanical Work Output}}{\\text{Chemical Energy Input}}$!$",
                            "optionImage": "",
                            "isCorrect": true
                        },
                        {
                            "optionText": "$!$\\eta = \\frac{\\text{Chemical Energy Input}}{\\text{Mechanical Work Output}}$!$",
