                    "options": [
                        {
                            "optionText": "$!$\\ln\\left(\\frac{T_b-T_i}{T_b-100}\\right)=\\frac{hA t}{mc}$!$",
                            "optionImage": "",
                            "isCorrect": true
                        },
                        {
                            "optionText": "$!$\\ln\\left(\\frac{100-T_i}{T_b-T_b}\\right)=\\frac{hA t}{mc}$!$",
                            "optionImage": "",
                            "isCorrect": false
                        },
                        {
                            "optionText": "$!$\\ln\\left(\\frac{T_b-100}{T_b-T_i}\\right)=\\frac{hA t}{mc}$!$",
