                    ],
                    "options": [
                        {
                            "optionText": "$!$ b \\sin \\theta = \\lambda $!$",
                            "optionImage": "",
                            "isCorrect": true
                        },
                        {
                            "optionText": "$!$ b \\sin \\theta = 2\\lambda $!$",
                            "optionImage": "",
