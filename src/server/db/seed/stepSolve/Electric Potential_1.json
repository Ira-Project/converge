                    "stepConcepts": [
                        "4235ecb8-e8ea-4100-a964-1482547aed9a"
                    ],
                    "options": [
                        {
                            "optionText": "$!$Q = \\frac{\\Delta E}{V}$!$",
                            "optionImage": "",
                            "isCorrect": true
                        },
                        {
                            "optionText": "$!$Q = \\Delta E \\times V$!$",
                            "optionImage": "",
                            "isCorrect": false
